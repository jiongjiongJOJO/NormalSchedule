<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/single_course_app"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appwidget_new_course"
    android:paddingStart="4dp"
    android:paddingEnd="0dp"
    android:paddingVertical="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/now_week"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:text="12"
        android:textColor="#6ba3dc"
        android:textSize="45dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/app_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="2dp"
        android:text="大学生职业规划"
        android:textColor="#333333"
        android:textSize="14dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/line_1"
        android:layout_width="14dp"
        android:layout_height="2dp"
        android:background="#626262"
        android:layout_marginStart="2dp"
        android:layout_below="@id/app_course_name"
        android:contentDescription="null" />

    <TextView
        android:id="@+id/app_course_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingEnd="5dp"
        android:text="张三\n九教102"
        android:textSize="11dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_course_teacher"
        android:text="8:00 - 9:40"
        android:textColor="#333333"
        android:textSize="11dp" />


</RelativeLayout>